command -nargs=* Wk :call Work(<f-args>) "Multiple args: proName save/open
function Work(args1, ...)
 if a:0==0
   call OpenSingle(a:args1)
 elseif a:0 == 1
    call WorksFn(a:args1,a:1) 
 else
    call WorksFn(a:args1,a:1) 
 endif
endfunction

function WorksFn(g,proName)
if a:g =="s"
  call  SaveFn(a:proName)
elseif a:g == "o"
  call  OpenFn(a:proName)
endif
endfunction

