[
    {
        "key": "ctrl+r", // redo in vim:解决:修改vim模式下的ctrl-r为U，但是这样做会出现问题，在插入模式下将无法输入字母U,所以在这里配置
        "command": "extension.vim_ctrl+r",
        "when": "textInputFocus && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+b",
        "command": "extension.vim_ctrl+b",
        "when": "textInputFocus && vim.mode == 'Insert'"
    },
    {
        "key": "ctrl+-",
        "command": "-notebook.centerActiveCell",
        "when": "notebookEditorFocused"
    },
    {
        "key": "ctrl+-",
        "command": "-expandLineSelection",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+-",
        "command": "-extension.vim_navigateCtrlL",
        "when": "editorTextFocus && vim.active && vim.use<C-l> && !inDebugRepl"
    },
    {
        "key": "ctrl+-",
        "command": "editor.action.startFindReplaceAction",
        "when": "editorFocus || editorIsOpen"
    },
    {
        "key": "ctrl+-",
        "command": "-extension.vim_ctrl+h",
        "when": "editorTextFocus && vim.active && vim.use<C-h> && !inDebugRepl"
    },
    // {
    //     "key": "ctrl+l",
    //     "command": "cursorHome",
    //     "when": "textInputFocus"
    // },
    // {
    //     "key": "ctrl+r",// redo in vim
    //     "command": "extension.vim_ctrl+r",
    //     "when": "textInputFocus && !editorReadonly"
    // },
    // {
    //     "key": "alt+v",// option v 可视模式
    //     "command": "extension.vim_ctrl+v",
    //     "when": "textInputFocus && vim.active && vim.use<C-v>&&!inDebugRepl"
    // },
    //把 ctrl t 映射为搜索
    {
        "key": "ctrl+t",
        "command": "actions.find",
        "when": "editorFocus || editorIsOpen"
    },
    {
        "key": "Z+Z",
        "command": "workbench.action.closeWindow",
        "when": "!editorIsOpen && !multipleEditorGroups"
    },
    {
        "key": "ctrl+f",
        "command": "-actions.find",
        "when": "editorFocus || editorIsOpen"
    }
]